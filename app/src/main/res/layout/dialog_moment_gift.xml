<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/image_overlay_true">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/viewpager" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_36dp"
        app:layout_constraintTop_toBottomOf="@id/line">

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin_8dp"
            android:paddingTop="@dimen/item_spacing_2dp"
            android:paddingBottom="@dimen/item_spacing_2dp"
            android:paddingLeft="@dimen/item_spacing_4dp"
            android:paddingRight="@dimen/item_spacing_4dp"
            android:text="@string/recharge"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_gift_recharge"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_8dp"
            android:layout_toRightOf="@id/tv_recharge"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/ll_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_margin_8dp"
            android:background="@drawable/bg_gift_send"
            android:paddingTop="@dimen/layout_margin_4dp"
            android:paddingBottom="@dimen/layout_margin_4dp"
            android:paddingLeft="@dimen/layout_margin_8dp"
            android:paddingRight="@dimen/layout_margin_8dp"
            android:text="@string/send"
            android:textColor="@color/white" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>